<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= animal.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/animals/<%= animal._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[name]"
            value="<%= animal.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[image]"
            value="<%= animal.image %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[freed]"
            value="<%= animal.freed %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[disease]"
            value="<%= animal.disease %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[symptoms]"
            value="<%= animal.symptoms %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[no_of_days]"
            value="<%= animal.no_of_days %>"
          />
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="animal[medicine_used]"
              value="<%= animal.medicine_used %>"
            />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[medicine_type]"
            value="<%= animal.medicine_type %>"
          />
      </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[village]"
            value="<%= animal.village %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[district]"
            value="<%= animal.district %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[state]"
            value="<%= animal.state %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[pincode]"
            value="<%= animal.pincode %>"
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="animal[description]"
            value="<%= animal.description %>"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/animals">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
